{{> client/preloader}}
{{> client/header}}
{{> client/breadcrumb}}

<!-- breadcrumb-area-start -->
<section class="cart-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form action="#">
                    <div class="table-content table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="product-thumbnail">Images</th>
                                    <th class="cart-product-name">Product</th>
                                    <th class="product-price">Unit Price</th>
                                    <th class="product-quantity">Quantity</th>
                                    <th class="product-subtotal">Total</th>
                                    <th class="product-remove">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each cart.products}}
                                    <tr>
                                        <td class="product-thumbnail"><a href="/product/{{this.product.slug}}"><img
                                                src="{{getFirstImage this.product.images}}" alt=""></a></td>
                                        <td class="product-name"><a href="/product/{{this.product.slug}}">{{this.product.name}}</a></td>
                                        {{#if this.variant.salePrice}}
                                            <td class="product-price"><span class="amount">${{this.variant.salePrice}}</span></td>
                                        {{else}}
                                            <td class="product-price"><span class="amount">${{this.variant.price}}</span></td>
                                        {{/if}}
                                        <td class="product-quantity">
                                            <div class="cart-plus-minus"><input type="text" value="{{this.quantity}}" /></div>
                                        </td>
                                        
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>