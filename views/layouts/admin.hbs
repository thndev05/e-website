<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}}</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap"
          rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- OWL Car -->
    <link rel="stylesheet" href="/admin/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/admin/css/owl.theme.default.min.css">
    <!-- Showmore css -->
    <link rel="stylesheet" href="/admin/css/showMoreItems-theme.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/admin/css/bootstrap.min.css">
    <!-- Theme CSS -->
    <link rel="stylesheet" href="/admin/css/style.css">
    <!-- Tagify   -->
    <link href="https://unpkg.com/@yaireo/tagify/dist/tagify.css" rel="stylesheet">
</head>

<body>

    {{{ body }}}

    <script type="text/javascript" src="/admin/js/jquery.js"></script>
    <script type="text/javascript" src="/admin/js/popper.js"></script>
    <!-- OWL Car -->
    <script src="/admin/js/owl.carousel.min.js"></script>
    <!-- Show More js -->
    <script src="/admin/js/showMoreItems.min.js"></script>

    <script type="text/javascript" src="/admin/js/bootstrap.min.js"></script>

    <!-- Tagify   -->
    <script src="https://unpkg.com/@yaireo/tagify"></script>

    <!-- Chart.js   -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.6/dist/chart.umd.min.js"></script>

    <!-- Sweetalert2   -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Theme js -->
    <script type="text/javascript" src="/admin/js/main.js"></script>

    <!-- Log out -->
    <script type="text/javascript" src="/admin/js/logout.js"></script>

    <!-- Dashboard   -->
    <script type="text/javascript" src="/admin/js/dashboard.js"></script>

    <script>
            {{#if sweetAlert}}
            Swal.fire({{{JSONstringify sweetAlert}}})
                    .then(data => {
                        {{#if sweetAlert.reloadPage}}
                            window.location.reload();
                            return;
                        {{/if}}

                        {{#if sweetAlert.confirmPage}}
                            if (data.isConfirmed) {
                                window.location.href = '{{sweetAlert.confirmPage}}';
                            }
                        {{/if}}

                        {{#if sweetAlert.denyPage}}
                            if (data.isDenied) {
                                window.location.href = '{{sweetAlert.denyPage}}';
                            }
                        {{/if}}

                        {{#if sweetAlert.timerDismissPage}}
                            if (data.isDismissed && data.dismiss === 'timer') {
                                window.location.href = '{{sweetAlert.timerDismissPage}}';
                            }
                        {{/if}}

                        {{#if sweetAlert.redirectPage}}
                            if ('back' === '{{sweetAlert.redirectPage}}') {
                                window.history.back();
                            } else {
                                window.location.href = '{{sweetAlert.redirectPage}}';
                            }
                        {{/if}}
                    });
            {{/if}}
    </script>
</body>
</html>