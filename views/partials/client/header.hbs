<header class="{{#if isHome}}transparent-header transparent-header-2{{/if}}">
    <div class="header-area box-90" {{#unless isHome}}id="header-sticky"{{/unless}}>
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-xl-2 col-lg-6 col-md-6 col-7 d-flex align-items-center {{#if isHome}}col-sm-3{{else}}col-sm-5 pos-relative{{/if}}">
                    <div class="logo">
                        {{#if isHome}}
                            <a href="/"><img src="/client/img/logo/logo-white.png" alt=""></a>
                        {{else}}
                            <a href="/"><img src="/client/img/logo/logo.png" alt=""></a>
                        {{/if}}

                    </div>
                </div>
                <div class="col-xl-8 col-lg-6 col-md-8 col-8 d-none d-xl-block">
                    <div class="main-menu text-center {{#if isHome}}menu-white{{/if}}">
                        <nav id="mobile-menu">
                            <ul>
                                <li>
                                    <a href="/">Home</a>

                                </li>
                                <li class="mega-menu">
                                    <a href="/shop">Shop</a>

                                </li>
                                <li class="mega-menu">
                                    <a href="/wishlist">Wishlist</a>

                                </li>
                                <li>
                                    <a href="/contact">Contact</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                {{#if isHome}}
                    <div class="col-xl-2 col-lg-6 col-md-6 col-5 col-sm-9 pl-0">
                {{else}}
                    <div class="col-xl-2 col-lg-6 col-md-6 col-5 col-sm-7 pl-0">
                {{/if}}

                    <div class="header-right f-right">
                        <ul>
                            <li class="search-btn">
                                <a class="search-btn nav-search search-trigger" href="#"><i class="fas fa-search"></i></a>
                            </li>
                            <li class="login-btn">
                                <a {{#if isAuthenticated}}
                                        href="/user/profile"
                                    {{else}}
                                        href="/auth/login"
                                    {{/if}}>
                                    <i class="far fa-user"></i>
                                </a>
                            </li>
                            <li class="d-shop-cart"><a href="#"><i class="flaticon-shopping-cart"></i> <span class="cart-count">0</span></a>
                                <ul class="minicart">
                                    <li>
                                        <div class="total-price">
                                            <span class="f-left">Total:</span>
                                            <span class="f-right">$0.0</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="checkout-link">
                                            <a href="/cart">Shopping Cart</a>
                                            <a id="checkout-link" class="red-color" href="/checkout">Checkout</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-12 d-xl-none">
                    <div class="mobile-menu"></div>
                </div>
            </div>
        </div>
        </div>
    </div>
</header>

<div class="search-wrap">
    <div class="search-inner">
        <i class="fas fa-times search-close" id="search-close"></i>
        <div class="search-cell">
            <form method="get">
                <div class="search-field-holder">
                    <input type="search" class="main-search-input" placeholder="Search Entire Store...">
                </div>
            </form>
        </div>
    </div>
</div>


{{#if isAuthenticated}}
    <script src="/client/js/minicart.js"></script>
{{/if}}